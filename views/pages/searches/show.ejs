<!DOCTYPE html>
<html>

<%- include('../../layout/head') %>


<body>
  <h1>Google API Book Results</h1>
  <%- include('../../layout/header') %>
  <ul>
    <% books.forEach(book => { %>
    <li>
      <p><img src="<%-book.image_url%>"></p>
      <p>Title:
        <%- book.title %>
      </p>
      <p>Author:
        <%- book.author %>
      </p>
      <p>ISBN:
        <%- book.isbn %>
      </p>
      <p>Description:
        <%- book.description %>
      </p>
      <button class="select-button" id="<%- book.isbn %>">Select This Book</button>
      <%- include('edit',{book}) %>
    </li>
    <% }) %>
  </ul>


  <%- include('../../layout/footer') %>
</body>

</html>